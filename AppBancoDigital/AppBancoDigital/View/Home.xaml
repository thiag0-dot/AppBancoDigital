<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBancoDigital.View.Home">
    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackLayout Grid.Row="0" BackgroundColor="#5f259f" Padding="15">
                <StackLayout Orientation="Horizontal">
                    <Button Text="&#xe7fd;" FontFamily="icons" FontSize="30" TextColor="White"
                            WidthRequest="50"
                            HeightRequest="50"
                            BackgroundColor="#4c0677"
                            CornerRadius="100"
                            Padding="10"
                            HorizontalOptions="StartAndExpand"/>
                    <Button Text="&#xe8f4;" FontFamily="icons" FontSize="30" TextColor="White"
                            WidthRequest="50"
                            HeightRequest="50"
                            BackgroundColor="#4c0677"
                            CornerRadius="100"
                            
                            HorizontalOptions="StartAndExpand"/>
                    
                </StackLayout>
                
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>